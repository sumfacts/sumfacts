          ]
      },
      "permalink": {
          "$id": "#/properties/permalink",
          "type": "string",
          "title": "The permalink schema",
          "description": "The relative URI at which the Argument can be viewed in the SumFacts client.",
          "default": "",
          "examples": [
              "/ipns/k2k4r8o60gnky6eu6xthf4kqy7kutovobvrjpfbn16iajpjp1mwv7j0l"
